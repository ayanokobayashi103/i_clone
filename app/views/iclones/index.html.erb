<div class="index-intro">
  <h1>INDEX</h1>
</div>
<%= link_to '新規投稿', new_iclone_path %>
<div class="feature-area">
  <div class="container">
    <div class="row">
      <% @iclones.each do |iclone| %>
      <div class="col-sm-6 col-md-4">
        <%= image_tag iclone.image.url %><br>
        <%= iclone.user.name %>
        <%= iclone.content %><br>
        <% if logged_in? %>
        <%= link_to '詳細', iclone_path(iclone.id),class: "btn btn-default" %>
        <% if iclone.user.id == current_user.id %>
        <%= link_to "編集", edit_iclone_path(iclone.id),class: "btn btn-default" %>
        <%= link_to '削除', iclone_path(iclone.id), method: :delete, data: { confirm: '本当に削除していいですか？' },class: "btn btn-default" %>
        <% end %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
